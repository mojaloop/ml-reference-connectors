{
  "include": [
    "src",
    "test",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "*.test.ts",
    "lib",
    "coverage",
    "examples"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    // prevents this tsconfig from compiling any files
    "target": "ES2022",
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "ES2022"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ],
      "docs/*": [
        "docs/*"
      ]
    },
    "esModuleInterop": true
  }
}