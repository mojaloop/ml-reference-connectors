            "fspId": "airtelzambia",
            "fspLEI": "984500BA13DAVB8B6C61"
            "name": "Niza"
        },
        "sendAmount": "150.00",
        "sendCurrency": "MWK",
        "receiveAmount": "140.00",
        "receiveCurrency": "ZMW",
        "targetFees": "10.00",
        "sourceFees": "10.00",
        "transactionId": "0GJGH201JGJ1J12324H",
        "homeTransactionId": "24dn186-sjhd-0293-44849-4724fhf",
    }
    end note
end


App -->> Customer: Terms of transfer

@enduml
